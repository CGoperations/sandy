Jenkinsfile (Declarative Pipeline)
pipeline {
    agent any

    stages {
        stage('Build-2') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy-1') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}

